<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:Tracker.Mobile.Views"
       x:Class="Tracker.Mobile.AppShell">

    <TabBar>
        <Tab Title="Students">
            <ShellContent ContentTemplate="{DataTemplate views:StudentsPage}" />
        </Tab>
        <Tab Title="Stats">
            <ShellContent ContentTemplate="{DataTemplate views:StatsPage}" />
        </Tab>
        <Tab Title="About">
            <ShellContent ContentTemplate="{DataTemplate views:AboutPage}" />
        </Tab>
    </TabBar>
</Shell>