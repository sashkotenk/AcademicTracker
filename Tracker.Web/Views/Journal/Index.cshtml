@model IEnumerable<Tracker.Core.Student>

@{
    ViewData["Title"] = "Journal";
}

<div class="container mt-4">
    <h2>Academic Journal</h2>

    <div class="mb-3 text-end">
        <a asp-action="Create" class="btn btn-primary">➕ Add New Student</a>
    </div>

    <table class="table table-striped table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Full Name</th>
                <th>Group</th>
                <th>Email</th>
                <th>Submissions (Scores)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td class="fw-bold">@item.FullName</td>
                    <td>
                        <span class="badge bg-secondary">@item.Group?.Name</span>
                    </td>
                    <td>@item.Email</td>
                    <td>
                        @if (item.Submissions != null && item.Submissions.Any())
                        {
                            @foreach (var sub in item.Submissions)
                            {
                                <span class="badge @(sub.Score >= 60 ? "bg-success" : "bg-danger") me-1">
                                    @sub.CourseWorkTitle: @sub.Score
                                </span>
                            }
                        }
                        else
                        {
                            <span class="text-muted small">No grades yet</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            Journal is empty. Click "Add New Student" to start.
        </div>
    }
</div>